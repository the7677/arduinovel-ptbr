void drawSprite(int x, int y, int width, int height, const char *sprite) {
  int start_x = x;
  char pixel_buff;

  for (size_t i = 0; i < (width * height) / 8; i ++) {
    memcpy_P(&pixel_buff, sprite+i, 1);
    u8g2.drawXBM(x, y, 8, 1, &pixel_buff);

    x += 8;

    if (x == start_x + width) {
      x = start_x;
      y++;
    }
  }
}